pipeline {
    agent any

    stages {
        stage("Git checkout") {
            steps {    
            echo "Checking the Git Repo"
            git url: "https://github.com/Ashu210980/Django-Notes-App.git", branch: "main" 
            }
        }
        
        stage("Build") {
            steps {
            echo " Build the Image"
            sh " docker build -t my-note-app ." 
           }
        }
    }
}
